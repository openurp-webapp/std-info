<div style="margin-top:5px;">
  <div class="btn-group" role="group" aria-label="...">
    <button type="button" class="btn btn-default" {{action 'add'}}>添加</button>
    {{#if isSelectOne}}
    <button type="button" class="btn btn-default" {{action 'edit'}}>修改</button>
    {{/if}}
    {{#if isSelect}}
    <button type="button" class="btn btn-default" {{action 'remove'}}>删除({{selectNum}})</button>
    {{/if}}
  </div>
  <form class="form-inline pull-right search-form">
    <div class="form-group">
      {{input value=searchField.studentCCode class="form-control" placeholder="学号"}}
    </div>
    <div class="form-group">
      {{input value=searchField.studentPPersonNName class="form-control" placeholder="姓名"}}
    </div>
    <button type="submit" class="btn btn-default" {{action 'search'}}>查询</button>
  </form>
</div>
<table class="table table-condensed table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>{{input type="checkbox" checked=allAreSelect}}</th>
      <th>学号</th>
      <th>姓名</th>
      <th>学生类别</th>
      <th>院系</th>
      <th>专业</th>
      <th>班级</th>
    </tr>
  </thead>
  <tbody>
    {{#each student in this itemController='comm/list/item'}}
      <tr {{action 'select'}}>
        <td>{{input type="checkbox" checked=student.isSelect}}</td>
        <td>{{student.code}}</td>
        <td>{{student.person.name}}</td>
        <td>{{student.stdType.name}}</td>
        <td>{{student.department.name}}</td>
        <td>{{student.major.name}}</td>
        <td>{{student.adminclass.name}}</td>
      </tr>
    {{else}}
      <tr><td colspan="7" align="center">Students is not found!</td></tr>
    {{/each}}
  </tbody>
</table>
{{partial 'comm/pagebar' this}}